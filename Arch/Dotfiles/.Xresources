!---------------------------!
!     Color Definitions     !
!---------------------------!
! Special
#define BORDER	 #ccffff
#define FG	 #c7ccd1
#define BG	 #1c2023
#define CURSOR	 #c7ccd1

! Black
#define BLACK	 #1c2023
#define BLACKB	 #747c84

! Red
#define RED	 #c7ae95
#define REDB	 #c7ae95

! Green
#define GREEN	 #95c7ae
#define GREENB	 #95c7ae

! Yellow
#define YELLOW	 #aec795
#define YELLOWB	 #aec795

! Blue
#define BLUE	 #ae95c7
#define BLUEB	 #ae95c7

! Magenta
#define MAGENTA	 #c795ae
#define MAGENTAB #c795ae

! Cyan
#define CYAN	 #95aec7
#define CYANB	 #95aec7

! White
#define WHITE	#c7ccd1
#define WHITEB	#f3f4f5

!---------------------------!
! Settings for Rofi colors  !
!---------------------------!
! State:           'bg',	'fg',	'bgalt',	'hlbg',	'hlfg'
rofi.color-normal: BG,  	CYAN,	BG,		BG,	MAGENTA
rofi.color-urgent: BG,  	GREEN,	BG,		BG,	YELLOW
rofi.color-active: BG,  	MAGENTA,BG,		BG,	BLUE
! Window:          'background',	'border',	'separator'
rofi.color-window: BG,			BORDER,		BG
! HiDPI
rofi.dpi: 220

!-----------------------------!
! Settings for HiDPI displays !
!-----------------------------!
!Xft.dpi: 220
Xft.autohint: 1
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

!-----------------------------!
!    Transparency settings    !
!-----------------------------!
! Will cause background to go black
URxvt.transparent: false
URxvt.shading: 0

!---------------------------!
!  Core settings for Rxvt   !
!---------------------------!
URxvt*depth:			32
URxvt.internalBorder:		5
URxvt.lineSpace:		0
URxvt.backend: xrender
URxvt.buffered: false

!---------------------------!
!   Font settings for Rxvt  !
!---------------------------!
URxvt.allow_bold:           true
URxvt*font: xft:SauceCodePro Nerd Font Mono:size=8, xft: Inconsolata for Powerline:size=8
URxvt*boldFont: xft:SauceCodePro Nerd Font Mono:style=bold:size=8, xft: Inconsolata for Powerline:style=BoldForPowerline:size=8

!-----------------------------!
! Scrollbar settings for Rxvt !
!-----------------------------!
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

!----------------------------------!
! Perl extension settings for Rxvt !
!----------------------------------!
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          google-chrome-stable

!----------------------------!
!  Cursor settings for Rxvt  !
!----------------------------!
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false

!----------------------------!
!  Pointer settings for Rxvt !
!----------------------------!
URxvt.pointerBlank:         true

!----------------------------!
!    Color scheme for Rxvt   !
!----------------------------!

! special
*.foreground:	FG
*.background:	BG
*.cursorColor:  CURSOR

! black
*.color0:       BLACK
*.color8:       BLACKB

! red
*.color1:       RED
*.color9:       REDB

! green
*.color2:       GREEN
*.color10:      GREENB

! yellow
*.color3:       YELLOW
*.color11:      YELLOWB

! blue
*.color4:       BLUE
*.color12:      BLUEB

! magenta
*.color5:       MAGENTA
*.color13:      MAGENTAB

! cyan
*.color6:       CYAN
*.color14:      CYANB

! white
*.color7:       WHITE
*.color15:      WHITEB
