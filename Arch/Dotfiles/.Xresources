!---------------------------!
!     Color Definitions     !
!---------------------------!
! border
#define DEF_BORDER       #e68ef5
#define DEF_BORDERNORM	 #b980ca

! special
#define DEF_foreground   #e3cac6
#define DEF_background   #150d0b
#define DEF_cursorColor  #e3cac6

! black
#define DEF_color0       #150d0b
#define DEF_color8       #9e8d8a

! red
#define DEF_color1       #7878c1
#define DEF_color9       #7878c1

! green
#define DEF_color2       #9076a2
#define DEF_color10      #9076a2

! yellow
#define DEF_color3       #bd7ca0
#define DEF_color11      #bd7ca0

! blue
#define DEF_color4       #7f81bc
#define DEF_color12      #7f81bc

! magenta
#define DEF_color5       #a68ba7
#define DEF_color13      #a68ba7

! cyan
#define DEF_color6       #ad8fb1
#define DEF_color14      #ad8fb1

! white
#define DEF_color7       #e3cac6
#define DEF_color15      #e3cac6


!---------------------------!
! Settings for Rofi colors  !
!---------------------------!
! State:           'bg',		'fg',		'bgalt',	'hlbg',		'hlfg'
rofi.color-normal: DEF_background,  	DEF_color6,	DEF_background,	DEF_background,	DEF_color5
rofi.color-urgent: DEF_background,  	DEF_color2,	DEF_background,	DEF_background,	DEF_color3
rofi.color-active: DEF_background,  	DEF_color5,	DEF_background,	DEF_background,	DEF_color4
! Window:         'background',		'border',	'separator'
rofi.color-window: DEF_background,	DEF_BORDER,	DEF_background
! HiDPI
rofi.dpi: 220

!-----------------------------!
! Settings for HiDPI displays !
!-----------------------------!
!Xft.dpi: 220
Xft.autohint: 1
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

!-----------------------------!
!    Transparency settings    !
!-----------------------------!
! Will cause background to go black
URxvt.transparent: false
URxvt.shading: 0

!---------------------------!
!  Core settings for Rxvt   !
!---------------------------!
URxvt*depth:			32
URxvt.internalBorder:		5
URxvt.lineSpace:		0
URxvt.backend: xrender
URxvt.buffered: false

!---------------------------!
!   Font settings for Rxvt  !
!---------------------------!
URxvt.allow_bold:           true
URxvt*font: xft:SauceCodePro Nerd Font Mono:size=8, xft: Inconsolata for Powerline:size=8
URxvt*boldFont: xft:SauceCodePro Nerd Font Mono:style=bold:size=8, xft: Inconsolata for Powerline:style=BoldForPowerline:size=8

!-----------------------------!
! Scrollbar settings for Rxvt !
!-----------------------------!
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

!----------------------------------!
! Perl extension settings for Rxvt !
!----------------------------------!
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          google-chrome-stable

!----------------------------!
!  Cursor settings for Rxvt  !
!----------------------------!
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false

!----------------------------!
!  Pointer settings for Rxvt !
!----------------------------!
URxvt.pointerBlank:         true

!----------------------------------------!
!    Color scheme in Xresources format   !
!----------------------------------------!

! border
*.border:	DEF_BORDER
*.bordernorm:	DEF_BORDERNORM

! special
*.foreground:	DEF_foreground
*.background:	DEF_background
*.cursorColor:  DEF_cursorColor

! black
*.color0:       DEF_color0
*.color8:       DEF_color8

! red
*.color1:       DEF_color1
*.color9:       DEF_color9

! green
*.color2:       DEF_color2
*.color10:      DEF_color10

! yellow
*.color3:       DEF_color3
*.color11:      DEF_color11

! blue
*.color4:       DEF_color4
*.color12:      DEF_color12

! magenta
*.color5:       DEF_color5
*.color13:      DEF_color13

! cyan
*.color6:       DEF_color6
*.color14:      DEF_color14

! white
*.color7:       DEF_color7
*.color15:      DEF_color15
